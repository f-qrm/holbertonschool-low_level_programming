#include "main.h"
/**
 * _isalpha - checks if a character is an alphabetic letter
 (either lowercase or uppercase)
 * @c: The character to check
 *Return: returns 1 is c is a letter, rreturns 0 otherwise
 */
int _isalpha(int c)
{
	if ((c >= 97 && c <= 122) || (c >= 65 && c <= 90))
	{
		return (1);
	}
	else
	{
		return (0);
	}
}
